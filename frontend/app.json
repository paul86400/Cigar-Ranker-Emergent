{
  "expo": {
    "name": "Cigar Ranker",
    "slug": "cigar-ranker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cigar-ranker",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#0c0c0c"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cigarranker.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0c0c0c"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.cigarranker.app",
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Cigar Ranker to access your camera to scan cigars."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Cigar Ranker to access your photos to scan cigar labels."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash.png",
          "resizeMode": "cover",
          "backgroundColor": "#0c0c0c"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
